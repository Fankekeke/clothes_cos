<!-- 状态栏区域 -->
<view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed none-bg text-white bg-img" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <navigator class='action canui-head-title' open-type="navigateBack" hover-class="none">
            <text class='icon-back'></text>
            我的商品
        </navigator>
    </view>
</view>
<view class="box" style="top: {{CustomBar}}px;">
    <view class="canui-card-order margin-top">
        <view class="canui-order-item bg-white" wx:for="{{ orderList }}">
            <view class="head-title-box">
                <view class="cu-tag sm bg-{{item.onPut == 1 ? 'blue' : 'red'}}">{{item.onPut == 1 ? '上架中' : '下架中'}}</view>
            </view>
            <view>
                <view class="cu-list menu menu-avatar">
                    <view class="cu-item">
                        <view class="cu-avatar radius lg" style="background-image:url(http://127.0.0.1:9527/imagesWeb/{{ item.image }});"></view>
                        <view class='content canui-xzwz tow' style="padding-left: 15px">
                            {{ item.name }}
                            <view style="font-size: 12px" wx:if="{{ item.type == 1 }}">上衣</view>
                            <view style="font-size: 12px" wx:if="{{ item.type == 2 }}">下衣</view>
                            <view style="font-size: 12px" wx:if="{{ item.type == 3 }}">首饰</view>
                            <view style="font-size: 12px" wx:if="{{ item.type == 4 }}">鞋子</view>
                            <view style="font-size: 12px" wx:if="{{ item.type == 5 }}">内衣</view>
                            <view style="font-size: 12px" wx:if="{{ item.type == 6 }}">化妆品</view>
                        </view>
                        <view class='action' style="padding-left: 15px">
                            <view class='text-price text-red'>{{ item.price }}</view>
                            <view class="text-xs text-right text-gray">x1</view>
                        </view>
                    </view>
                </view>
            </view>
            <view>
                <text class="text-right text-red canui-text-left" style="font-size: 11px">
                    {{ item.content != null ? item.content : '- -' }}
                </text>
            </view>
            <view class="order-price-box">
                <text style="font-size: 12px">{{ item.days }}创建</text>
            </view>
            <view class="grid col-4 flex justify-end order-btn-box">
                <view class='margin-tb-sm text-center'>
                    <button class='cu-btn round line-red shadow' bindtap="edit" data-index="{{item.id}}">
                        修改
                    </button>
                </view>
            </view>
        </view>
        <view wx:if="{{ orderList.length === 0 }}">
            <van-empty style="height: 400px;margin: 0 auto" description="无商品信息" />
        </view>
    </view>
</view>

<view class="canui-foor-fixed {{TabbarBot=='y'?'canui-tabbar-bottom':''}}">
    <button class="cu-btn canui-color-gradual shadow-blur round lg" bindtap='add'><text class="icon-add"></text> 新增商品</button>
</view>